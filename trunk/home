<?php
require_once("inc/auth.inc");
require_once("inc/utils.inc");
require_once("inc/db.inc");

require_once("inc/ui.inc");

ui_head("Welcome");


insertViewPublic();
?>

<?php
$numrows = 0;
$gAuthkey = getAuthkey();
if ( ! $gAuthkey ) {
	insertLoginForm();
}
else {
    $numrows = doSimpleQuery("select count(*) from data where authkey='$gAuthkey';");
}

if ( ! $numrows ) {
	insertAbout();
	insertHowTo();
}
else {
	require_once("inc/myjson.inc");
}

ui_foot();

?>
